{
	"include": [
		"poopjs/**/*",
	],
	"exclude": [
		"poopjs/test/**/*",
	],
	"compilerOptions": {
		"module": "none",
		// "moduleResolution": "node",
		"target": "ESNext",
		"removeComments": false,
		"preserveConstEnums": true,
		"outFile": "./dist/poop.js",
		"declaration": true,
		"rootDir": "poopjs",
		"inlineSourceMap": true,
		"inlineSources": true,
	}
}